<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SweetDream" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SweetDreamTheme" >
        <activity
            android:name="com.SweetDream.Activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.SweetDream.Activity.MyBookActivity"
            android:label="@string/header_my_books" >
        </activity>

        <activity
            android:name="com.SweetDream.Activity.FavoritesActivity"
            android:label="@string/header_favorites" >
        </activity>

    </application>

</manifest>
